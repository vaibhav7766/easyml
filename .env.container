# Container Environment Configuration for EasyML with Azure Blob Storage

# Database Configuration (Update with your hosted database URLs)
POSTGRES_URL="postgresql://username:password@your-postgres-host:5432/easyml_db"
MONGO_URL="mongodb://username:password@your-mongo-host:27017"
MONGO_DB_NAME="easyml"

# Authentication
SECRET_KEY="your-super-secret-key-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# DVC Configuration - Azure Blob Storage (Container Environment)
DVC_REMOTE_URL="azure://your-container-name"
DVC_REMOTE_NAME="azure"
DVC_AZURE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=XXXXX==;EndpointSuffix=core.windows.net"
DVC_AZURE_CONTAINER_NAME="your-container-name"

# Additional Azure settings for container authentication
AZURE_STORAGE_ACCOUNT="yourstorageaccount"
AZURE_STORAGE_KEY="XXXXX=="

# MLflow Configuration
MLFLOW_TRACKING_URI="file:./mlruns"

# Application Settings
DEBUG=false
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Container-specific settings
ENVIRONMENT="production"
LOG_LEVEL="INFO"
