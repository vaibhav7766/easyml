# EasyML Configuration File
# Copy this to .env and modify as needed

# Application Settings
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PostgreSQL Configuration
POSTGRES_URL=postgresql://easyml_user:easyml_pass@localhost:5432/easyml_db
POSTGRES_ASYNC_URL=postgresql+asyncpg://easyml_user:easyml_pass@localhost:5432/easyml_db

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
DATABASE_NAME=easyml

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://easyml_user:easyml_pass@localhost:5432/easyml_mlflow
MLFLOW_DEFAULT_ARTIFACT_ROOT=./mlruns

# File Storage
UPLOAD_DIR=./uploads
MODELS_DIR=./models
DATASETS_DIR=./datasets
MAX_PLOT_FEATURES=20

# DVC Configuration
DVC_REMOTE_NAME=origin
DVC_REMOTE_URL=s3://your-bucket/dvc-storage

# Logging Settings
# LOG_LEVEL=info
# LOG_FILE=./logs/easyml.log
